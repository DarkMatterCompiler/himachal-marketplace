// prisma/schema.prisma

generator client {
  provider = "prisma-client-js" // Changed from "prisma-client" to the standard JS client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <--- THIS WAS MISSING!
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  userType    String   // "Buyer", "Seller"
  createdAt   DateTime @default(now())
}